{
	"compilerOptions": {
		"outDir": "./dist/server",
		"rootDir": "./server",
		"noEmit": false,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"lib": ["ES2022"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node"]
	},
	"include": ["server/**/*"],
	"exclude": ["node_modules", "dist", "src"]
}
